@model IEnumerable<Settimana_3_Manuel.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<h1>All Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Date</th>
            <th>Address</th>
            <th>Processed</th>
            <th>Products</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.User.Name</td>
                <td>@order.Date</td>
                <td>@order.Address</td>
                <td>@order.Processed</td>
                <td>
                    <ul>
                        @foreach (var item in order.OrderProducts)
                        {
                            <li>@item.Product.Name - Quantity: @item.Quantity</li>
                        }
                    </ul>
                </td>
                <td>
                    <form asp-action="ProcessOrder" method="post" style="display:inline;">
                        <input type="hidden" name="orderId" value="@order.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-primary">Process</button>
                    </form>
                    <form asp-action="DeleteOrder" method="post" style="display:inline;">
                        <input type="hidden" name="orderId" value="@order.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
