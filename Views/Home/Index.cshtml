@{
    ViewData["Title"] = "Home";
}

<div class="jumbotron text-center">
    <div class="container">
        <h1 class="display-4">Welcome to In Forno!</h1>
        <p class="lead">The best pizzeria to enjoy freshly baked pizzas.</p>
        <hr class="my-4">
        <p>Discover our products and order your favorite pizza online.</p>
       
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Our Products</h5>
                    <p class="card-text">Check out our delicious range of pizzas.</p>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-primary">View Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Your Cart</h5>
                    <p class="card-text">View and manage your orders.</p>
                    <a href="@Url.Action("Index", "Order")" class="btn btn-primary">View Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <h2 class="text-center mb-4">About Us</h2>
    <p>In Forno is a family-run pizzeria offering a wide range of pizzas made with fresh, high-quality ingredients. Our goal is to provide an unforgettable culinary experience to all our customers. Come visit us or order online to try our delicious pizzas!</p>
</div>
