@model IEnumerable<Settimana_3_Manuel.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                @if (!string.IsNullOrEmpty(item.Photo))
                {
                    <img src="data:image/png;base64,@item.Photo" class="card-img-top" alt="@item.Name" />
                }
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">
                        <strong>Price:</strong> @item.Price <br />
                        <strong>Delivery Time:</strong> @item.DeliveryTimeInMinutes minutes
                    </p>
                    @if (item.Ingredients != null && item.Ingredients.Any())
                    {
                        <p class="card-text">
                            <strong>Ingredients:</strong>
                            <ul>
                                @foreach (var ingredient in item.Ingredients)
                                {
                                    <li>@ingredient.Name</li>
                                }
                            </ul>
                        </p>
                    }
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
